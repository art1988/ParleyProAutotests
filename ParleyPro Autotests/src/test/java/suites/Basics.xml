<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Basics" configfailurepolicy="continue">
    <test name = "Basic contract lifecycle" preserve-order="true">
        <parameter name="contractName" value="Contract lifecycle autotest"/>
        <classes>
            <class name="tests.SetupLogger"/>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.AddNewContract"/>
            <class name="tests.basics.UploadDocument"/>
            <class name="tests.basics.ProceedThroughLifecycleStages"/>
            <class name="tests.DeleteContractFromExecuted"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="Core discussions functionality" preserve-order="true">
        <parameter name="contractName" value="Contract discussions autotest"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.CreateContractForDiscussions"/>
            <class name="tests.basics.ParagraphActions"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="Formatting of just uploaded document" preserve-order="true">
        <parameter name="contractName" value="Contract formatting autotest"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.CreateContractForFormatting"/>
            <class name="tests.basics.CheckFormattingByEditDocument"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="User creation" preserve-order="true">
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.AddNewUserTest"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="Deletion and canceling of documents" preserve-order="true">
        <parameter name="contractName" value="Contract - [delete and cancel documents AT]"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.CreateContractAndUploadTwoDocumentsAT61"/>
            <class name="tests.basics.DeleteAndCancelDocuments"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="PDF uploading #1" preserve-order="true">
        <parameter name="contractName" value="Contract lifecycle autotest"/>
        <parameter name="documentName" value="Address_as_the_ABA_president.pdf"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.AddNewContract"/>
            <class name="tests.basics.pdf_upload.UploadAndDownloadPDFDocument"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="PDF uploading #2" preserve-order="true">
        <parameter name="contractName" value="Contract lifecycle autotest"/>
        <parameter name="documentName" value="wiki_article.pdf"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.AddNewContract"/>
            <class name="tests.basics.pdf_upload.UploadAndDownloadPDFDocument"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="Attachments: upload and download" preserve-order="true">
        <parameter name="contractName" value="Contract lifecycle autotest"/>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.basics.AddNewContract"/>
            <class name="tests.basics.attachments.UploadAndDownloadAttachments"/>
            <class name="tests.DeleteContractFromInProgress"/>
            <class name="tests.Logout"/>
        </classes>
    </test>
</suite>