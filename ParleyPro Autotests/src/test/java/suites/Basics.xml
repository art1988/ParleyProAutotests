<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Basics" configfailurepolicy="continue">
    <test name = "Basic contract lifecycle" preserve-order="true">
        <parameter name="contractName" value="Contract lifecycle autotest"></parameter>
        <classes>
            <class name = "tests.SetupLogger"/>
            <class name = "tests.LoginToDashboard"/>
            <class name = "tests.AddNewContract"/>
            <class name = "tests.UploadContract"/>
            <class name = "tests.ProceedThroughLifecycleStages"/>
            <class name = "tests.DeleteContractFromExecuted"/>
            <class name = "tests.Logout"/>
        </classes>
    </test>

    <test name="Core discussions functionality" preserve-order="true">
        <parameter name="contractName" value="Contract discussions autotest"></parameter>
        <classes>
            <class name = "tests.LoginToDashboard"/>
            <class name = "tests.CreateContractForDiscussions"/>
            <class name = "tests.ParagraphActions"/>
            <class name = "tests.DeleteContractFromInProgress"/>
            <class name = "tests.Logout"/>
        </classes>
    </test>

    <test name="Formatting of just uploaded document" preserve-order="true">
        <parameter name="contractName" value="Contract formatting autotest"></parameter>
        <classes>
            <class name="tests.LoginToDashboard"></class>
            <class name="tests.CreateContractForFormatting"></class>
            <class name="tests.CheckFormattingByEditDocument"></class>
            <class name="tests.DeleteContractFromInProgress"></class>
            <class name="tests.Logout"></class>
        </classes>
    </test>

    <test name="Numbered list recalculation" preserve-order="true">
        <classes>
            <class name="tests.LoginToDashboard"></class>
            <class name="tests.CreateContractForNumberedList"></class>
        </classes>
    </test>
</suite>