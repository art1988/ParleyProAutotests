<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name = "Fields suite" configfailurepolicy="continue">
    <test name="AT-80: Relations broken if field deleted" preserve-order="true">
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.fields.at80.AddRequestFieldsAndAddRelatedField"/>
            <class name="tests.fields.at80.RemoveFieldAndCheckUI"/>
            <class name="tests.Logout"/>
        </classes>
    </test>

    <test name="AT-96 and AT-100: Fields order should be preserved for Summary and Post-execution fields" preserve-order="true">
        <parameter name="contractName" value="executed for post-execution fields"></parameter>
        <classes>
            <class name="tests.LoginToDashboard"/>
            <class name="tests.fields.at96at100.AddFieldsChangeOrderAndSave"/>
            <class name="tests.fields.at96at100.CheckOrderOfSummaryFieldsOnContractInformation"/>
            <class name="tests.fields.at96at100.AddExecutedContractAndCheckOrderOfPostExecutionFields"/>
            <class name="tests.fields.at96at100.RemoveCreatedFields"/>
            <class name="tests.DeleteContractFromExecuted"/>
            <class name="tests.Logout"/>
        </classes>
    </test>
</suite>